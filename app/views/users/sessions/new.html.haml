%h2.text-center.mb-4 ログイン

= simple_form_for(resource, as: resource_name, url: user_session_path, html: { class: 'container mt-5' }) do |f|
  = render 'admins/shared/error_messages', resource: resource
  .form-group
    = f.input :email,
      required: false,
      autofocus: true,
      input_html: { class: 'form-control', autocomplete: "email" }
  .form-group
    = f.input :password,
      required: false,
      input_html: { class: 'form-control', autocomplete: "new-password" }
    .actions.mt-3.text-center
      = f.button :submit, "ログイン", class: 'btn btn-primary'
.text-center.mt-4
  = render "users/shared/links"
