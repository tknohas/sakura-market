%h2.text-center.mb-4 ログイン

= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'container mt-5' }) do |f|
  .form-group
    = f.input :email,
      required: false,
      autofocus: true,
      input_html: { class: 'form-control', autocomplete: "email" }
  .form-group
    = f.input :password,
      required: false,
      input_html: { class: 'form-control', autocomplete: "current-password" }
    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean

  .actions.mt-3.text-center
    = f.button :submit, "ログイン", class: 'btn btn-primary'
