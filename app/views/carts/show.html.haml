- if current_cart.cart_items.any?
  - current_cart.cart_items.each do |cart_item|
    = cart_item.product.name
    = cart_item.product.price
    = cart_item.quantity
    = cart_item.total_price
    = simple_form_for cart_item, url: product_cart_item_path(cart_item.product_id, cart_item.id) do |f|
      = f.input :quantity
      = f.button :submit, class: 'btn btn-primary'
    = button_to '削除', product_cart_item_path(cart_item.product_id, cart_item.id), method: :delete, data: {turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger'
- else
  %p.text-center 商品は追加されていません。
